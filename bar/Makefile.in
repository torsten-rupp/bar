  ifeq (@HAVE_BZ2@,1)
    MIN_COMPRESS_NAMES += bzip1
  endif
  ifeq (@HAVE_LZMA@,1)
    MIN_COMPRESS_NAMES += lzma1
  endif
  ifeq (@HAVE_LZO@,1)
    MIN_COMPRESS_NAMES += lzo1
  endif
  ifeq (@HAVE_LZ4@,1)
    MIN_COMPRESS_NAMES += lz4-1
  endif
  ifeq (@HAVE_ZSTD@,1)
    MIN_COMPRESS_NAMES += zstd1
  endif
endif

# supported min. crypt algorithms

CHUNK FILE "FIL0" File
  uint16 compressAlgorithm;
  uint16 cryptAlgorithm;
  crc32  crc

CHUNK FILE_ENTRY "FENT" FileEntry
  uint64 size
  uint64 timeLastAccess
  uint64 timeModified
  uint64 timeLastChanged
  uint32 userId
  uint32 groupId
  uint32 permission
  string name
  crc32  crc

CHUNK FILE_DATA "FDAT" FileData
  uint64 fragmentOffset
  uint64 fragmentSize
  crc32  crc
  data   data

CHUNK DIRECTORY "DIR0" Directory
  uint16 cryptAlgorithm;
  crc32  crc

CHUNK DIRECTORY_ENTRY "DENT" DirectoryEntry
  uint64 timeLastAccess
  uint64 timeModified
  uint64 timeLastChanged
  uint32 userId
  uint32 groupId
  uint32 permission
  string name
  crc32  crc

CHUNK LINK "LNK0" Link
  uint16 cryptAlgorithm;
  crc32  crc

CHUNK LINK_ENTRY "LENT" LinkEntry
  uint64 timeLastAccess
  uint64 timeModified
  uint64 timeLastChanged
  uint32 userId
  uint32 groupId
  uint32 permission
  string name
  string fileName
  crc32  crc

#CHUNK PERMISSION "PER0" Permission

# end of file

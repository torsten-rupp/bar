#CHUNK NAME "NAME" Name
#  uint32 id
#  name   name

CHUNK FILE "FIL0" File
  uint16 compressAlgorithm;
  uint16 cryptAlgorithm;

CHUNK FILE_ENTRY "FENT" FileEntry
  uint64 size
  uint64 timeLastAccess
  uint64 timeModified
  uint64 timeLastChanged
  uint32 userId
  uint32 groupId
  uint32 permission
  name   name

CHUNK FILE_DATA "FDAT" FileData
  uint64 partOffset
  uint64 partSize
  data   data

CHUNK DIRECTORY "DIR0" Directory
  uint16 cryptAlgorithm;

CHUNK DIRECTORY_ENTRY "DENT" DirectoryEntry
  name name

CHUNK LINK "LNK0" Link
  uint16 cryptAlgorithm;

CHUNK LINK_ENTRY "LENT" LinkEntry
  uint64 timeLastAccess
  uint64 timeModified
  uint64 timeLastChanged
  uint32 userId
  uint32 groupId
  uint32 permission
  name   name
  name   fileName

#CHUNK PERMISSION "PER0" Permission

# end of file

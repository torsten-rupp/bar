	$(call functionIndexQueryEmpty,"SELECT linkEntries.entityId \
                                        FROM entriesNewest \
                                          LEFT JOIN linkEntries ON entryFragments.entryId=linkEntries.entryId \
                                          LEFT JOIN storages ON storages.id=linkEntries.storageId \

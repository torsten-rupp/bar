	($(CD) $(UP_DIR); \
         $(ULIMIT) -Sv $(MEMORY_LIMIT); \
         $(TEST_ENVIRONMENT) $(TEST_TIMEOUT) $(TEST_BAR_PREFIX) $(call functionExec,$(TEST_BAR)) \

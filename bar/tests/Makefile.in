TESTCODE_COMMAND1C=$(TEST_BAR_DEBUG) \
                     -c $(INTERMEDIATE_DIR)/test-\#\#\#.bar $(TESTS_DATA_DIR)/data \
                     --compress-algorithm=lzma9 \
                     --crypt-algorithm=AES256 \
                     --crypt-password=$(TEST_PASSWORD_CRYPT) \

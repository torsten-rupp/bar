    INSTALL_BIN_DIR=$exec_prefix
  fi
else
  INSTALL_BIN_DIR=$bindir
fi

AC_CONFIG_FILES(Makefile)
AC_CONFIG_FILES(barcontrol/Makefile)

AC_CONFIG_COMMANDS(TCL,
                   [
                    (cd tcl/scanx; ./configure)
                   ]
                  )


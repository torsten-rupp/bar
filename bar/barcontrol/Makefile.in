# create Unix start script
barcontrol: barcontrol.in barcontrol-linux.jar barcontrol-linux_64.jar
	$(CAT) barcontrol.in | \
        ( \
          while IFS="" read line; do \
            line=`$(ECHO) "$$line"|$(SED) 's|\@JAVA\@|$(JAVA)|g'`; \
            line=`$(ECHO) "$$line"|$(SED) 's|\@JAVA_FLAGS\@|$(JAVA_FLAGS)|g'`; \
            $(ECHO) "$$line"; \
          done; \
        ) > $@
	$(CHMOD) 775 $@

ifneq ($(LAUNCH4J),)
# create Windows executable
barcontrol.exe: barcontrol-windows.jar
	$(LAUNCH4J) barcontrol.xml
else
# create Windows start script
barcontrol.bat: barcontrol.bat.in barcontrol-windows.jar
	$(CAT) barcontrol.bat.in | \
        ( \
          while IFS="" read line; do \
            line=`$(ECHO) "$$line"|$(SED) 's|\@JAVA\@|$(JAVA)|g'`; \
            line=`$(ECHO) "$$line"|$(SED) 's|\@JAVA_FLAGS\@|$(JAVA_FLAGS)|g'`; \
            $(ECHO) "$$line"; \
          done; \
        ) > $@
	$(CHMOD) 775 $@
endif

# compile
.PHONY: compile
compile: $(OBJECTS)

# run
run: $(OBJECTS)
ifneq ($(JAVA),)
	$(JAVA) $(JAVA_FLAGS) -classpath $(CLASSPATH) BARControl $(OPTIONS)
else
	@$(ECHO) "ERROR: no 'java' command - cannot execute BARControl"
endif
rundebug: $(OBJECTS)
ifneq ($(JAVA),)
	$(JAVA) $(JAVA_FLAGS) -classpath $(CLASSPATH) BARControl --debug $(OPTIONS)
else
	@$(ECHO) "ERROR: no 'java' command - cannot execute BARControl"
endif
runxdebug: $(OBJECTS)
ifneq ($(JAVA),)
	$(JAVA) $(JAVA_FLAGS) -classpath $(CLASSPATH) BARControl --debug --bar-server-debug $(OPTIONS) $(O)
else
	@$(ECHO) "ERROR: no 'java' command - cannot execute BARControl"
endif

rundev: $(OBJECTS)
ifneq ($(JAVA),)
	$(JAVA) $(JAVA_FLAGS) -classpath $(CLASSPATH) BARControl --port=39909 --key-file=../bar.jks $(OPTIONS) $(O)
else
	@$(ECHO) "ERROR: no 'java' command - cannot execute BARControl"
endif
rundevdebug: $(OBJECTS)
ifneq ($(JAVA),)
	$(JAVA) $(JAVA_FLAGS) -classpath $(CLASSPATH) BARControl --port=39909 --key-file=../bar.jks --debug $(OPTIONS) $(O)

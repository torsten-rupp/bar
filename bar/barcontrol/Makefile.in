ENVIRONMENT        = SWT_GTK3=0

BARCONTROL_OPTIONS = --port=39909 --key-file=../bar-key.pem --ca-file=../bar-ca.pem --cert-file=../bar-certificate.pem --role=expert

#---------------------------------- commands----------------------------------

CAT        = cat
CD         = cd

# i18n
.PHONY: i18n po
i18n po: \
  po/german.po \
  po/japanese.po

po/barcontrol.pot: $(SOURCE_DIR)/src/*.java
	$(INSTALL) -d $(@D)
	$(XGETTEXT) $(XGETTEXT_FLAGS) -o $@ src/*.java

po/german.po: po/barcontrol.pot
	$(INSTALL) -d $(@D)
	$(MSGMERGE) -U $@ po/barcontrol.pot
	$(TOUCH) $@

po/japanese.po: po/barcontrol.pot
	$(INSTALL) -d $(@D)
	$(MSGMERGE) -U $@ po/barcontrol.pot
	$(TOUCH) $@

classes/app/i18n/Messages_de.class: po/german.po
	$(MSGFMT) --java2 -d classes -r app.i18n.Messages -l de po/german.po

classes/app/i18n/Messages_jp.class: po/japanese.po
	$(MSGFMT) --java2 -d classes -r app.i18n.Messages -l jp po/japanese.po

.PHONE: poeditde
poeditde:
	poedit po/german.po

.PHONE: poeditjp
poeditjp:
	poedit po/japanese.po


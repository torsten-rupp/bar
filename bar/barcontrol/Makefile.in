#---------------------------------- settings ---------------------------------

ENABLE_DEBUG = @ENABLE_DEBUG@
ENABLE_GUI   = @ENABLE_GUI@

#------------------------------------ paths ----------------------------------

SWT_DIR      = @SWT_DIR@
LAUNCH4J_DIR = @LAUNCH4J_DIR@

#--------------------------------- tool chain --------------------------------

JAVA         = @JAVA@
JAVA_FLAGS   = @JAVA_FLAGS@

JAVAC        = @JAVAC@
JAVAC_FLAGS  = @JAVAC_FLAGS@
# -Xlint

JAR          = @JAR@

SWT_JAR      = $(SWT_DIR)/swt.jar

CLASSPATH    = classes:$(SWT_JAR)

#---------------------------------- commands----------------------------------

CAT        = cat
CD         = cd
CHMOD      = chmod
CP         = cp
DIFF       = diff
ECHO       = echo
ECHO_NO_LF = echo -n
INSTALL    = @INSTALL@
MKDIR      = mkdir
PERL       = @PERL@
RMDIR      = rmdir
RMF        = rm -f
RMRF       = rm -rf
TAR        = tar
UNZIP      = unzip

#------------------------ specific variables/settings ------------------------

#---------------------------------- rules ------------------------------------

classes/%.class:src/%.java
	$(INSTALL) -d classes
ifneq ($(JAVAC),)
ifneq ($(SWT_DIR),)
	$(JAVAC) $(JAVAC_FLAGS) -d classes -classpath $(CLASSPATH) src/*.java
else
	@$(ECHO) "ERROR: no swt.jar - cannot compile Java sources"
endif
else
	@$(ECHO) "ERROR: no 'javac' command - cannot compile Java sources"
endif

#--------------------------------- objects -----------------------------------

SOURCES        = src/BARControl.java \
                 src/BARServer.java \
                 \
                 src/TableLayout.java \
                 src/TableLayoutData.java \
                 src/ProgressBar.java \
                 src/Widgets.java \
                 src/Dialogs.java \
                 src/StringParser.java \
                 src/Dprintf.java \

OTHER_SOURCES  = jar.txt \

OBJECTS        = $(foreach z,$(SOURCES),$(basename $(subst src/,classes/,$z)).class) \
                 classes/Config.class \

INTERMEDIATE   = barcontrol.jar \
                 barcontrol-linux.jar \
                 barcontrol-windows.jar

TARGETS        = barcontrol \
                 $(if $(LAUNCH4J),barcontrol.exe,barcontrol.bat) \

#------------------------------ dependencies ---------------------------------

.PHONY: all clean distclean depend
all: $(TARGETS)

clean:
	$(RMF) $(OBJECTS)
	$(RMF) $(INTERMEDIATE)
	$(RMF) classes/*.class
	$(RMF) $(TARGETS)

distclean: clean
	$(RMF) Makefile
	$(RMF) src/Config.java
	$(RMRF) tmp

.PHONE: jars
jars: barcontrol.jar barcontrol-linux.jar barcontrol-windows.jar

# create jars
barcontrol.jar: jar.txt $(OBJECTS) images/*.gif
ifneq ($(JAR),)
	$(INSTALL) -d tmp/jar
	$(CP) classes/*.class tmp/jar
	$(INSTALL) -d tmp/jar/images
	$(CP) images/*.gif tmp/jar/images
	($(CD) tmp/jar; $(JAR) cmf ../../jar.txt ../../$@ *)
	$(RMRF) tmp/jar
else
	@$(ECHO) "ERROR: no 'jar' command - cannot create $@"
endif

barcontrol-linux.jar: jar.txt $(OBJECTS) images/*.gif jars/swt-3.4-linux.jar
ifneq ($(JAR),)
	$(INSTALL) -d tmp/jar
	($(CD) tmp/jar; $(UNZIP) ../../jars/swt-3.4-linux.jar 1>/dev/null; $(RMRF) META-INF)
	$(CP) classes/*.class tmp/jar
	$(INSTALL) -d tmp/jar/images
	$(CP) images/*.gif tmp/jar/images
	($(CD) tmp/jar; $(JAR) cmf ../../jar.txt ../../$@ *)
	$(RMRF) tmp/jar
else
	@$(ECHO) "ERROR: no 'jar' command - cannot create $@"
endif

barcontrol-windows.jar: jar.txt $(OBJECTS) images/*.gif jars/swt-3.4-windows.jar
ifneq ($(JAR),)
	$(INSTALL) -d tmp/jar
	($(CD) tmp/jar; $(UNZIP) ../../jars/swt-3.4-windows.jar 1>/dev/null; $(RMRF) META-INF)
	$(CP) classes/*.class tmp/jar
	$(INSTALL) -d tmp/jar/images
	$(CP) images/*.gif tmp/jar/images
	($(CD) tmp/jar; $(JAR) cmf ../../jar.txt ../../$@ *)
	$(RMRF) tmp/jar
else
	@$(ECHO) "ERROR: no 'jar' command - cannot create $@"
endif

# create Unix start script
barcontrol: barcontrol.in barcontrol-linux.jar
	$(CAT) barcontrol.in | \
        ( \
          while IFS="" read line; do \
            line=$${line//\@JAVA\@/$(JAVA)}; \
            $(ECHO) $$line; \
          done; \
        ) > $@
	$(CHMOD) 775 $@

ifneq ($(LAUNCH4J),)
# create Windows executable
barcontrol.exe: barcontrol-windows.jar
	$(LAUNCH4J) barcontrol.xml
else
# create Windows start script
barcontrol.bat: barcontrol.bat.in barcontrol-windows.jar
	$(CAT) barcontrol.bat.in | \
        ( \
          while IFS="" read line; do \
            line=$${line//\@JAVA\@/$(JAVA)}; \
            $(ECHO) $$line; \
          done; \
        ) > $@
	$(CHMOD) 775 $@
endif

# run
run: $(OBJECTS)
ifneq ($(JAVA),)
	$(JAVA) $(JAVA_FLAGS) -classpath $(CLASSPATH) BARControl
else
	@$(ECHO) "ERROR: no 'java' commadn - cannot execute BARControl"
endif

# run with jar file
ifneq ($(JAVA),)
runjar: barcontrol
	./barcontrol
else
	@$(ECHO) "ERROR: no 'java' commadn - cannot execute BARControl"
endif

# copy distribution files
.PHONY: dist
dist:
	$(INSTALL) -d $(DIRECTORY)/barcontrol
	$(INSTALL) -d $(DIRECTORY)/barcontrol/src
	$(INSTALL) -m 664 \
                   Makefile.in \
                   barcontrol.cfg \
                   $(DIRECTORY)/barcontrol
	$(INSTALL) -m 664 \
                   $(sort $(SOURCES)) \
                   src/Config.java.in \
                   $(DIRECTORY)/barcontrol/src
	$(INSTALL) -d $(DIRECTORY)/barcontrol/classes
	$(INSTALL) -m 664 \
                   $(sort $(OTHER_SOURCES)) \
                   $(DIRECTORY)/barcontrol
	$(INSTALL) -d $(DIRECTORY)/barcontrol/images
	$(INSTALL) -m 664 \
                   images/*.gif \
                   $(DIRECTORY)/barcontrol/images
	$(INSTALL) -d $(DIRECTORY)/barcontrol/jars
	$(INSTALL) -m 664 \
                   jars/*.jar \
                   $(DIRECTORY)/barcontrol/jars

# end of file

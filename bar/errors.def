  if (ERROR_ERRNO != 0)
  {
    stringSet(errorText,strerror(ERROR_ERRNO),sizeof(errorText));
  }
  else
  {
    errorText[0] = '\0';
    switch (ERROR_CODE)
    {
      case ERROR_CREATE_FILE:
        stringAppend(errorText,"create file: ",sizeof(errorText));
        break;
      case ERROR_OPEN_FILE:
        stringAppend(errorText,"open file: ",sizeof(errorText));
        break;
      case ERROR_CREATE_DIRECTORY:
        stringAppend(errorText,"create directory: ",sizeof(errorText));
        break;
      case ERROR_OPEN_DIRECTORY:
        stringAppend(errorText,"open directory: ",sizeof(errorText));
        break;
    }
    stringAppend(errorText,ERROR_DATA,sizeof(errorText));
  }


  ifeq ($(TEST_COMPRESS_NAMES_LZO),)
    ifeq (@HAVE_LZO@,1)
      TEST_COMPRESS_NAMES += lzo1 lzo2 lzo3 lzo4 lzo5
    endif
  else
    TEST_COMPRESS_NAMES += $(TEST_COMPRESS_NAMES_LZO)
  endif
  ifeq ($(TEST_COMPRESS_NAMES_LZ4),)
    ifeq (@HAVE_LZ4@,1)
      TEST_COMPRESS_NAMES += lz4-0 lz4-1 lz4-9
    endif
  else

  ifeq ($(TEST_COMPRESS_NAMES_LZMA),)
    ifeq (@HAVE_LZMA@,1)
      TEST_COMPRESS_NAMES += lzma1 lzma2 lzma3 lzma4 lzma5 lzma6 lzma7 lzma8 lzma9
    endif
